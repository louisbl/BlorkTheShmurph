	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace darkunicorn "crm.gobelins.darkunicorn.*";
		@font-face {
			src:url("../medias/BD_Cartoon_Shout.ttf");
			fontFamily: cartoon;
			embedAsCFF: true;
		}
		s|Application {
			fontFamily: cartoon;
			fontStyle:normal;
			color: white;
		}
		s|Button {
			fontFamily: Arial, Helvetica, "_sans";
			fontStyle:normal;
			color: black;
		}
		s|TextInput{
			fontFamily: Arial, Helvetica, "_sans";
			fontStyle:normal;
			color: grey;
		}
		s|IconItemRenderer{
			fontFamily: Arial, Helvetica, "_sans";
			fontStyle:normal;
			color: black;
		}
	</fx:Style>
</s:Application>
